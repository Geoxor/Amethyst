{
  "name": "amethyst",
  "author": "Geoxor <geoxor123@outlook.com>",
  "productName": "Amethyst",
  "version": "1.7.7",
  "main": "./release/dist/main/main.js",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://raw.githubusercontent.com/Geoxor/amethyst/master/LICENSE"
    },
    {
      "type": "MIT",
      "url": "https://raw.githubusercontent.com/slavfox/Cozette/master/LICENSE"
    },
    {
      "type": "MIT",
      "url": "https://raw.githubusercontent.com/chrisguttandin/web-audio-beat-detector/master/LICENSE"
    }
  ],
  "description": "A music box made of amethyst.",
  "scripts": {
    "dev": "concurrently -p none \"npm run start:main\" \"npm run start:renderer\"",
    "build": "concurrently -p none \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "concurrently -p none \"tsc ./src/main/preload.ts\" \"tsc -p ./src/main/tsconfig.json\" ",
    "build:renderer": "vite build --config ./src/renderer/vite.config.ts",
    "start:main": "npm run build:main && cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only ./src/main/main.ts",
    "start:renderer": "vite dev --config ./src/renderer/vite.config.ts",
    "package": "rimraf ./release && npm run build && electron-builder build --publish never",
    "package:asarless": "npm run build && electron-builder build --config.asar=false",
    "preinstall": "npm i -g electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .ts,.js,.vue",
    "test": "npx vitest --config ./src/renderer/vite.config.ts"
  },
  "electronmon": {
    "patterns": [
      "!src/__tests__/**",
      "!release/**",
      "!src/renderer/**"
    ],
    "logLevel": "quiet"
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "Amethyst",
    "appId": "org.Amethyst",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "fileAssociations": [
      {
        "ext": "ogg",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "wav",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "flac",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "opus",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "aac",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "aiff",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "mp3",
        "icon": "./assets/icon.ico"
      },
      {
        "ext": "m4a",
        "icon": "./assets/icon.ico"
      }
    ],
    "files": [
      "./release/dist/**/*",
      "!**/*.d.ts"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "asarUnpack": [
        "**/node_modules/sharp/**"
      ],
      "category": "Music"
    },
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "directories": {
      "output": "release/build",
      "buildResources": "assets"
    },
    "extraResources": [
      "assets/**/*",
      "!assets/**/*.aseprite"
    ],
    "publish": {
      "provider": "github",
      "owner": "Geoxor",
      "repo": "amethyst"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Geoxor/amethyst"
  },
  "contributors": [
    {
      "name": "Connor OKeefe",
      "email": "cimok2000@gmail.com",
      "url": "https://github.com/cimok2000"
    },
    {
      "name": "George Tsotsos",
      "email": "geoxor123@outlook.com",
      "url": "https://github.com/Geoxor"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amethyst/amethyst/issues"
  },
  "keywords": [
    "electron",
    "music-player",
    "vue"
  ],
  "homepage": "https://github.com/amethyst/amethyst#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/discord-rpc": "^4.0.3",
    "@types/node": "18.11.3",
    "@types/sharp": "^0.31.0",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.18.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/test-utils": "^2.2.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "20.2.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.2",
    "electron-rebuild": "^3.2.7",
    "electronmon": "^2.0.2",
    "eslint": "^8.12.0",
    "jest": "^29.2.1",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "unplugin-vue-components": "^0.22.8",
    "url-loader": "^4.1.1",
    "vitest": "^0.24.3",
    "vue-loader": "^17.0.0",
    "vue-tsc": "^1.0.8"
  },
  "dependencies": {
    "@supercharge/promise-pool": "^2.3.2",
    "@vue-flow/additional-components": "^1.1.0",
    "@vue-flow/core": "^1.2.0",
    "@vueuse/core": "^9.3.1",
    "chalk": "^4.1.2",
    "discord-rpc": "^4.0.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.6",
    "electron-updater": "^4.6.5",
    "fast-average-color-node": "^2.4.0",
    "mitt": "^3.0.0",
    "music-metadata": "7.13.0",
    "sharp": "0.30.7",
    "unplugin-icons": "^0.14.12",
    "vite": "^3.1.8",
    "vite-plugin-windicss": "^1.8.4",
    "vue": "^3.2.41",
    "vue-router": "^4.1.5",
    "web-audio-beat-detector": "^8.1.31",
    "windicss": "^3.5.6"
  },
  "devEngines": {
    "node": ">=16.9.x",
    "npm": ">=8.x"
  },
  "browserslist": [],
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "singleQuote": true
  }
}
