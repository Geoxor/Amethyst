{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Amethyst",
  "colors": {
    "primary": "#A68CDA",
    "light": "#A68CDA",
    "dark": "#7768B9"
  },
  "icons": {
    "library": "fontawesome"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Guides",
        "description": "Procedures and development",
        "icon": "book",
        "groups": [
          {
            "group": "Installation",
            "pages": ["guides/installation", "guides/showcase"]
          },
          {
            "group": "Development",
            "pages": [
              "guides/setting_up",
              "guides/android",
              "guides/localization"
            ]
          },
          {
            "group": "Events",
            "pages": [
              "guides/player_events",
              "guides/window_events"
            ]
          }
        ]
      },
      {
        "dropdown": "User manual",
        "description": "Learn how to use Amethyst",
        "icon": "book-open",
        "groups": [
          {
            "group": "General",
            "pages": [
              "user-manual/keyboard-shortcuts",
              "user-manual/importing-eq"
            ]
          },
          {
            "group": "User interface",
            "pages": [
              "user-manual/ui/playback-controls"
            ]
          },
          {
            "group": "File types",
            "pages": [
              "user-manual/file-types/amethyst-metadata-file",
              "user-manual/file-types/amethyst-node-graph",
              "user-manual/file-types/amethyst-configuration-file"
            ]
          },
          {
            "group": "Nodes",
            "pages": [
              "user-manual/nodes/filter-node",
              "user-manual/nodes/master-node",
              "user-manual/nodes/input-node",
              "user-manual/nodes/output-node"
            ]
          },
          {
            "group": "Visuals",
            "pages": [
              "user-manual/visuals/vectorscope",
              "user-manual/visuals/spectrum-analyzer"
            ]
          }
        ]
      }
    ],
    
    "global": {
      "anchors": [
        {
          "anchor": "Source",
          "href": "https://github.com/Geoxor/amethyst",
          "icon": "code"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/geoxor",
          "icon": "discord"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/geoxor"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Submit issue",
      "href": "https://github.com/Geoxor/Amethyst/issues"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Geoxor/amethyst",
      "discord": "https://discord.gg/geoxor"
    }
  }
}